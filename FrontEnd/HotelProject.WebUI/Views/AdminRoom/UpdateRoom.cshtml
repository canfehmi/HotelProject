@model UpdateRoomDto
@{
    ViewData["Title"] = "UpdateRoom";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<h2>Oda Güncelle</h2>
<br />
<form method="post">
    <input type="hidden" asp-for="RoomID" />
    <label>Oda Numarası:</label>
    <input type="text" asp-for="RoomNumber" class="form-control" />
    <br />
    <label>Başlık:</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Fiyat:</label>
    <input type="number" asp-for="Price" class="form-control" />
    <br />
    <label>Yatak Sayısı:</label>
    <input type="text" asp-for="BadCount" class="form-control" />
    <br />
    <label>Banyo Sayısı:</label>
    <input type="text" asp-for="BathCount" class="form-control" />
    <br />
    <label>Açıklama:</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <label>Görsel:</label>
    <input type="text" asp-for="RoomCoverImage" class="form-control" />
    <br />
    <button class="btn btn-primary">Odayı Güncelle</button>
</form>